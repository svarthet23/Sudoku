<Window x:Class="Sudoku.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku"
        mc:Ignorable="d"
        Title="Welcome" Height="200" Width="500" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Focusable="False" Visibility="Visible" WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFA0A0A0" Offset="1"/>
            <GradientStop Color="#FE262626"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="SUDOKU#" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" FontFamily="Unispace" FontStyle="Italic"/>
        <Label Content="Oskar Podgórski" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontFamily="Unispace"/>
        <Label Content="Tomasz Gaj" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontFamily="Unispace"/>

    </Grid>
</Window>
